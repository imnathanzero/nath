#!/bin/bash

repo init -u https://github.com/ProjectMatrixx/android.git -b 16.0 --git-lfs
/opt/crave/resync.sh

git clone https://github.com/nathanzerogarage/android_device_xiaomi_tanzanite -b lineage-23.0 device/xiaomi/tanzanite
git clone https://github.com/nathanzerogarage/android_device_xiaomi_tanzanite-kernel -b lineage-22.2-ksun device/xiaomi/tanzanite-kernel
git clone https://github.com/nathanzerogarage/proprietary_vendor_xiaomi_tanzanite -b lineage-23.0 vendor/xiaomi/tanzanite
git clone https://github.com/AxionAOSP/packages_apps_ViPER4AndroidFX.git -b v4a packages/apps/ViPER4AndroidFX
git clone https://github.com/nathanzerogarage/android_hardware_xiaomi -b lineage-23.0 hardware/xiaomi
git clone https://github.com/nathanzerogarage/android_hardware_mediatek -b lineage-23.0 hardware/mediatek
git clone https://github.com/nathanzerogarage/android_device_mediatek_sepolicy_vndr -b lineage-23.0 device/mediatek/sepolicy_vndr

rm -rf out/target

. build/env*

export BUILD_USERNAME=nathan
export TZ=Asia/Jakarta

brunch tanzanite userdebug
