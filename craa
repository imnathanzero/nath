#!/bin/bash

repo init -u https://github.com/LineageOS/android.git -b lineage-23.0 --git-lfs
/opt/crave/resync.sh

git clone https://github.com/nathanzerogarage/android_device_xiaomi_tanzanite-old -b lineage-23.0 device/xiaomi/tanzanite
git clone https://github.com/nathanzerogarage/android_device_xiaomi_tanzanite-kernel -b lineage-22.2-ksu device/xiaomi/tanzanite-kernel
git clone https://github.com/nathanzerogarage/proprietary_vendor_xiaomi_tanzanite -b lineage-23.0 vendor/xiaomi/tanzanite
git clone https://github.com/TogoFire/packages_apps_ViPER4AndroidFX.git -b v4a packages/apps/ViPER4AndroidFX
rm -rf hardware/lineage/compat;git clone https://github.com/imnathanzero/android_hardware_lineage_compat -b lineage-23.0 hardware/lineage/compat
git clone https://github.com/nathanzerogarage/android_hardware_xiaomi -b lineage-23.0 hardware/xiaomi
git clone https://github.com/nathanzerogarage/android_hardware_mediatek -b lineage-23.0 hardware/mediatek
git clone https://github.com/nathanzerogarage/android_device_mediatek_sepolicy_vndr -b lineage-23.0 device/mediatek/sepolicy_vndr

rm -rf out/target

. build/env*

export BUILD_USERNAME=nathan
export TZ=Asia/Jakarta

lunch lineage_tanzanite-bp2a-userdebug
mka bacon
